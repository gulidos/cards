			</fileNamePattern>
			<maxHistory>180</maxHistory>
		</rollingPolicy>
	</appender>
	 -->
  	<logger
		name="org.springframework"
		level="INFO">
		<appender-ref ref="core-log" />
	</logger> 

	<logger 
		name="ru.rik" 
		level="DEBUG" >
		<appender-ref ref="core-log" />
	</logger>
</configuration>